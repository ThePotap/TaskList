@model List<TaskList.Models.Task>
@{
    ViewData["Title"] = "TaskList";
}


<div class="task-list">
    <h1 align = "center">Task list</h1>
    <table width="100%" border="1">
        <tr>
            <th>Description</th>
            <th>Date</th>
            <th>Done</th>
        </tr>
        @using (Html.BeginForm("DeleteTask", "Home"))
        {
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Description</td>
                    <td>@task.ExpectedDate</td>
                    <td><input type="checkbox"></td>
                    <td>
                        <button type="submit" name="delete" value="@task.Id">delete</button>
                        <input type="submit" formaction="EditTask" name="action" value="Edit" />
                    </td>
                </tr>
            }
        }
    </table>
</div>
<div>
    @using(Html.BeginForm("AddTask", "Home"))
    {        
        <button class="button-add" type="submit">Add task</button>
    }
</div>